package server;

import java.io.Serializable;

public class GameData implements Serializable {
    private static final long serialVersionUID = 1L;

    private String command;  // 명령 ("SPAWN", "MOVE", "ATTACK" 등)
    private String unitType; // 유닛 종류 ("SCV", "Marine")
    private int unitX;       // 유닛의 X 좌표
    private int unitY;       // 유닛의 Y 좌표
    private int fortressHp;  // 성의 체력

    public GameData(String command, String unitType, int unitX, int unitY, int fortressHp) {
        this.command = command;
        this.unitType = unitType;
        this.unitX = unitX;
        this.unitY = unitY;
        this.fortressHp = fortressHp;
    }

    // Getter 및 Setter
    public String getCommand() { return command; }
    public void setCommand(String command) { this.command = command; }

    public String getUnitType() { return unitType; }
    public void setUnitType(String unitType) { this.unitType = unitType; }

    public int getUnitX() { return unitX; }
    public void setUnitX(int unitX) { this.unitX = unitX; }

    public int getUnitY() { return unitY; }
    public void setUnitY(int unitY) { this.unitY = unitY; }

    public int getFortressHp() { return fortressHp; }
    public void setFortressHp(int fortressHp) { this.fortressHp = fortressHp; }
}
